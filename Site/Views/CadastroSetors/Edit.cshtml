@model Site.Models.CadastroSetor

@{
    ViewBag.Title = "Setores";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="card">
    <div class="card-header card-header-primary">
        <h2 class="card-title">Editar Setores</h2>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div></div>
            </div>
            @Html.HiddenFor(model => model.idSetor)
            <div class="row">
                <div class="col-md-4">

                    <label>Id Localidade</label><br />
                    @Html.EditorFor(model => model.idLocalidade, null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.idLocalidade, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label>Setor</label>
                    @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label>Centro de Custo</label>
                    @Html.EditorFor(model => model.centroCusto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.centroCusto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Status</label>
                    @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label>Cota Mensal</label>
                    @Html.EditorFor(model => model.cotaMensal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cotaMensal, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4"></div>
            </div>

            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="border-bottom:none">
                            <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" style="text-align:center">
                            <div id="ContExclamacao">
                                <svg width="300" height="200" viewBox="0 0 300 200" style="display:flex;margin-left:85px">
                                    <g id="content" transform="translate(150, 100)">
                                        <circle cx="0" cy="0" r="70" stroke="green" stroke-width="1" fill="transparent" />
                                    </g>
                                    <polygon points="100,90 140,120 220,50 225,38 140,110 100,83" style="fill:green;stroke:green;stroke-width:1; margin-left:90px" />
                                </svg>
                                <label style="font-family:MinhaFonte; font-size:25px">Atualizado</label>
                            </div>
                        </div>
                        <div class="modal-footer" style="border-top:none">
                            @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>*@
                            @*@using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Deletar" class="btn btn-danger" id="delete"  data-target="#exampleModalCenter" data-toggle="modal">/>
                                </div>
                            }*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Atualizar" class="btn btn-primary" data-target="#exampleModalCenter" data-toggle="modal" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>
@Html.ActionLink("Voltar", "Index", "CadastroSetors", new { @class = "btn btn-primary btn-sm" })
<script>
    $("#navDashboard").removeClass("active");
    $("#navEquipamentos").removeClass("active");
    $("#navSetores").addClass("active");
</script>


