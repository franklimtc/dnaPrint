@model Site.Models.CadastroEquipamentos

@{
    ViewBag.Title = "Equipamentos";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

}

<div class="card">
    <div class="card-header card-header-primary">
        <h2 class="card-title">Editar equipamento</h2>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-3">
                    <label>UF</label><br />
                    @Html.DisplayFor(modelItem => Model.CadastroEstado.UF)
                </div>
                <div class="col-md-3">
                    <label>Cidade</label><br />
                    @Html.DisplayFor(modelItem => Model.CadastroCidade.cidade)
                </div>
                <div class="col-md-3">
                    <label>Unidade</label><br />
                    @Html.DisplayFor(model => model.CadastroUnidade.descricao)
                </div>
                <div class="col-md-3">
                    <label>Setor</label><br />
                    @Html.DisplayFor(model => model.CadastroSetor.descricao)
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Fabricante</label><br />
                    @Html.DisplayFor(model => model.CadastroEquipamentoModelo.Fabricante)
                </div>
                <div class="col-md-3">
                    <label>Modelo</label><br />
                    @Html.DisplayFor(model => model.CadastroEquipamentoModelo.Modelo)
                </div>
                <div class="col-md-3">
                    <label>Série</label><br />
                    @Html.DisplayFor(model => model.serie)
                    @Html.HiddenFor(model => model.serie)
                </div>
                <div class="col-md-3"></div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <label>Nome</label><br />
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    <label>IP</label><br />
                    @Html.EditorFor(model => model.ip, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ip, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    <label>Ativo</label><br />
                    @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idEquipamento)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>


<div>
    @Html.ActionLink("Voltar", "Index")
</div>

