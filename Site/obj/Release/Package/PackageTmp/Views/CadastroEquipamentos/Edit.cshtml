@model Site.Models.CadastroEquipamentos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    


    <div class="form-horizontal">
        <h4>CadastroEquipamentos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idEquipamento)

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="control-label">UF</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(modelItem => Model.CadastroEstado.UF)
                            </div>
                            <div class="col-md-2">
                                <label class="control-label">Cidade</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(modelItem => Model.CadastroCidade.cidade)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Unidade</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(model => model.CadastroUnidade.descricao)
                            </div>
                            <div class="col-md-2">
                                <label>Setor</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(model => model.CadastroSetor.descricao)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Fabricante</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(model => model.CadastroEquipamentoModelo.Fabricante)
                            </div>
                            <div class="col-md-2">
                                <label>Modelo</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(model => model.CadastroEquipamentoModelo.Modelo)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Série</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(model => model.serie)
                            </div>
                            <div class="col-md-2">
                                <label>Nome</label>
                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>IP</label>
                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.ip, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ip, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-2">
                                <label>Status</label>
                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

